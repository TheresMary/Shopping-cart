<section class="container">

  <div class="row">
    <div class="col-md-12 mt-2 text-right">
    <a href="/admin/add-products">
      <button class="btn btn-outline-dark white">Add Products</button></a>
    </div>

  <div class="mt-4">
  <table class="table table-hover" id="table_id">
  <thead class="thead-dark text-center"> 
      <tr>
        <th scope="col">SI.No</th>
        <th scope="col">Name</th>
        <th scope="col">Category</th>
        <th scope="col">Size</th>
        <th scope="col">Price</th>
        <th scope="col">Description</th>
        <th scope="col">Image</th>
        <th>Options</th>

      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr>
        <th scope="row">{{@index}}</th>
        <td>{{this.Name}}</td>
        <td>{{this.Category}}</td>
        <td>{{this.Size}}</td>
        <td>{{this.Price}}</td>
        <td>{{this.Description}}</td>
        <td><img style="width:70px; height:70px"  src="/product-images/{{this._id}}.jpg"></td>

        <td><a href="/admin/delete-products/{{this._id}}" class="btn btn-outline-dark white" onclick="return confirm('Are you sure you want to delete {{this.Name}} ?')">Delete</a>&nbsp;&nbsp;&nbsp;
        <a href="/admin/edit-products/{{this._id}}" class="btn btn-outline-dark white">Edit</a></td>
        
      </tr>
      {{/each}}
    </tbody>
  </table>
  </div>

  </div>  
</section>

<script>
$(document).ready( function () {
    $('#table_id').DataTable();
} );
</script>