<div class="container">
    <div class="row">
        <div class="col-md-6 m-auto">   
            <form action="/admin/login" method="POST" class="form-group text-center border border-dark mt-5 p-5">

                <p class="h2 mb-4">Admin Login</p>
                {{#if loginErr}}
                <h5 class="error red">{{loginErr}}</h5>
                {{/if}}

                <input type="email" name="Email" class="form-control mb-4" placeholder="E-mail">
                <input type="password" name="Psw" class="form-control mb-4" placeholder="Password">

                <!-- Sign in button -->
                <button class="btn btn-dark btn-block my-4" type="submit">Lets Go!</button>

            </form>
        </div>
    </div>

</div>